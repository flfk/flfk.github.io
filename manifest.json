{
	"manifest_version": 2,

	"name": "Project Arbol",
	"description": "Lets you plant trees by allowing ads in your browser",
	"version": "1.0",

	"browser_action": {
    "default_icon": "images/Tree-icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
		"tabs",
		"activeTab",
    "storage"
  ],

	"background": {
    "scripts":["background.js"]
	},

  "content_scripts": [
		{
		//use matches call a match for any web page that that matches these formats (note * is wildcard for 0 or more characters)
		"matches": ["http://*/", "https://*/*"],
		"css": ["style.css"],
		"js": ["jquery-3.2.1.js", "main.js", "popup.js"]
		}
	],

	//declare what we want to use in content scripts and avialable for user to see
	"web_accessible_resources": [
		"toolbar.html",
		"style.css",
		"images/*"
	]
}
